@Transactional
public LoadDto insertLoad(String queryName) {
    LoadEntity loadEntity = LoadEntity.builder()
        .runId(CommonUtil.createUUID())
        .loadCd(queryName)  // Set the loadCd directly from the queryName
        .loadId(1235L) // event-Id from the kafka alert
        .type(DataLoadTypes.PANDA_ALERTS)
        .transformingStatus(DataLoadTransformingStatuses.WAITING)
        .fromDt(new Date())
        .toDt(new Date())
        .build();

    entityManager.persist(loadEntity);
    entityManager.flush(); // Ensure it's saved immediately

    // Construct LoadDto directly from loadEntity
    return LoadDto.builder()
        .runId(loadEntity.getRunId())
        .loadCd(loadEntity.getLoadCd()) // Ensure this getter is present in LoadEntity
        .loadId(loadEntity.getLoadId())
        .build();
}

import static org.junit.jupiter.api.Assertions.*;
import org.junit.jupiter.api.Test;

public class DataChangeAlertLoadDtoTest {

    @Test
    void testBuilderSetsRunId() {
        String expectedRunId = "12345";

        DataChangeAlertLoadDto dto = DataChangeAlertLoadDto.builder()
                .runId(expectedRunId)
                .build();

        assertEquals(expectedRunId, dto.getRunId());
    }

    @Test
    void testBuilderSetsFileContent() {
        byte[] expectedFileContent = new byte[] {1, 2, 3, 4, 5};

        DataChangeAlertLoadDto dto = DataChangeAlertLoadDto.builder()
                .fileContent(expectedFileContent)
                .build();

        assertArrayEquals(expectedFileContent, dto.getFileContent());
    }

    @Test
    void testAllArgsConstructor() {
        String runId = "67890";
        byte[] fileContent = new byte[] {10, 20, 30};

        DataChangeAlertLoadDto dto = DataChangeAlertLoadDto.builder()
                .runId(runId)
                .fileContent(fileContent)
                .build();

        assertEquals(runId, dto.getRunId());
        assertArrayEquals(fileContent, dto.getFileContent());
    }
}
